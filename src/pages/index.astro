---
import Layout from '../layouts/DefaultLayout.astro';
import ProjectList from '../components/ProjectList.astro';
import { designProjects, filmProjects } from '../data/projects.js';

const front = [
  "HTML",
  "CSS",
  "JavaScript",
  "TypeScript (In progress)",
  "React (Basics)",
  "Vue (Basics)",
  "Astro (Basics)",
];
const back = [
  "Node.js",
  "Express",
  "Flask",
  "REST APIs",
  "SQL",
  "NoSQL",
  "MongoDB",
  "PostgreSQL",
  'Python',
  'Socket.IO',
  'Redis (Basics)',
  'Zod'
];

const devOps = [
  "Docker",
  "Git",
  "GitHub",
  "CI/CD",
  "Linux",
  "Bun",
  "Render"
];

const clients = [
  "Pinterest","Slack","Logitech","Google Health","Barclays","Leica","MetaLab","Ustwo","Tempest","Count Me In"
];
---
<Layout>
  <div id="home">  
      <section id="design" class="projects">
        <h2>Projects</h2>
        <ProjectList items={designProjects.map(p => ({ href: `/design/${p.slug}`, title: p.title }))} />
      </section>
  
      <section id="services" class="services">
        <h2>Technologies</h2>
        <h3>Front End</h3>
        <ul>
          {front.map(s => <li>{s}</li>)}
        </ul>
        <h3>Back End</h3>
        <ul>
          {back.map(s => <li>{s}</li>)}
        </ul>
        <h3>Dev Ops</h3>
        <ul>
          {devOps.map(s => <li>{s}</li>)}
        </ul>
      </section>
  
      <section id="contact" class="contact">
        <h2>Contact</h2>
        <p><a href="mailto:projects@bpowell.co">projects@bpowell.co</a></p>
        <ul class="social">
          <li><a href="#">Twitter</a></li>
          <li><a href="#">LinkedIn</a></li>
          <li><a href="#">GitHub</a></li>
        </ul>        
    </section>    
  </div>
</Layout>
